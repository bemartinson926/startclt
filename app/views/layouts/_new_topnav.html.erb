<!-- Mainbar starts -->
<div class="mainbar">
<!-- Mainbar head starts -->
	<div class="main-head">
 		<div class="container">
			<div class="row">
				<div class="col-sm-9">
				<!-- Page title -->
					<h3><%= @group.name %></h3>
				</div>
			<!--TODO: double check this breakpoint/visibility vs js for this-->
			<div class="col-sm-3">
				<!-- Head user -->
				<div class="head-user dropdown">
					<a href="#" data-toggle="dropdown" id="profile">
						<% if current_user %>
							<img src='<%= current_user.avatar_url %>' alt="" class="img-responsive img-circle"/>
						<!-- User name -->
						<!--TODO change to <%= current_user.first_name %>--> 
						<!--TODO Figure out fonts within Jim's config file- ASK-->
						<%= current_user.email %><i class="fa fa-caret-down"></i> 
						<% end %>
					</a>
						<!-- Dropdown -->
						<ul class="dropdown-menu" aria-labelledby="profile">
						    <li><a href="#">View/Edit Profile</a></li>
							<li><a href="#">Something Else</a></li>
							<li><a href="#">Something Else</a></li>
							<li class="divider"></li>
							<li><%=link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
						</ul>
					</div>
				</div>
			</div>	
		</div>
	</div>
	<!--Mainbar head ends -->

	<!-- main content begins -->
	<%= yield %>
	
</div>
<!-- Mainbar ends -->
