<div class="col-md-7">
  <!-- Pages widget -->
  <div class="widget pages-widget">
    
    <div class="widget-head br-custom-blue">
      <h2 class="link-style no-hov">Your Groups</h2>
    </div>
    
    <div class="widget-body no-padd">
      
      <div class="table-responsive">
        <table class="table table-bordered">
          <!-- Table heading -->
          <tr> 
            <th><input type="checkbox"></th>
            <th>Group Name</th>
            <th>Members</th>
            <th>Status</th>
          </tr>
          <% current_user.groups.each do |group| %>
            <tr>
              <td><input type="checkbox"></td>
              <td><%= group.name %></td>
              <td><%= group.memberships.count %></td>
              <td><span class="badge badge-danger">R</span></td>
            </tr>
          <% end %>
        </table>
      </div>
      
    </div>
    
    <div class="widget-foot">
      <span class="pull-left">
        <a href="#" class="btn btn-default btn-sm">Add New Group</a> &nbsp; 
        <a href="#" class="btn btn-danger btn-sm">Delete All</a>
      </span>
      <div class="pull-right">
        <!-- Pagination -->
        <ul class="pagination">
          <li><a href="#">&laquo;</a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">&raquo;</a></li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
    
  </div>

</div>